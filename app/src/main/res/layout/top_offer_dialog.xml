<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:padding="@dimen/_5sdp">

    <ImageView
        android:id="@+id/prod_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/app_logo" />

    <com.yummybaryani.admin.CustomFont.NativelyCustomTextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prod_image"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Product Name"
        android:textColor="@color/Black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.yummybaryani.admin.CustomFont.NativelyCustomTextView
        android:id="@+id/product_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_name"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Product Detail Great looking UI. Would this be compatible with Adobe XD? (all layers, etc)."
        android:textColor="@color/Black"
        android:textSize="15sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_detail"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <com.yummybaryani.admin.CustomFont.NativelyCustomTextView
            android:id="@+id/edit_item"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_radius"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="Edit"
            android:textColor="@color/app_color"
            android:textSize="14sp" />

        <com.yummybaryani.admin.CustomFont.NativelyCustomTextView
            android:id="@+id/delete_item"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:background="@drawable/border_radius"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="Delete"
            android:textColor="@color/app_color"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>